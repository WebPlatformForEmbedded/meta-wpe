# Provides configuration for the SwitchBoard Plugin
WPE_SWITCHBOARD_AUTOSTART ??= "true"
WPE_SWITCHBOARD_DEFAULT ??= ""
WPE_SWITCH_AMAZON ??= "false"
WPE_SWITCH_COBALT ??= "false"
WPE_SWITCH_NETFLIX ??= "false"
WPE_SWITCH_WEBKITBROWSER ??= "false"

PACKAGECONFIG[switchboard] = "\
    -DPLUGIN_SWITCHBOARD=ON \
    -DPLUGIN_SWITCHBOARD_AUTOSTART="${WPE_SWITCHBOARD_AUTOSTART}" \
    ,-DPLUGIN_SWITCHBOARD=OFF, \
"
