# Provides configuration for the Monitor Plugin
WPE_MONITOR_AUTOSTART ??= "true"

WPE_MONITOR_COBALT_MEMORYLIMIT ??= "614400"
WPE_MONITOR_WEBKITBROWSER_MEMORYLIMIT ??= "614400"
WPE_MONITOR_WEBKITBROWSER_APPS_MEMORYLIMIT ??= "614400"
WPE_MONITOR_WEBKITBROWSER_RESIDENT_APP_MEMORYLIMIT ??= "614400"
WPE_MONITOR_WEBKITBROWSER_UX_MEMORYLIMIT ??= "614400"
WPE_MONITOR_WEBKITBROWSER_YOUTUBE_MEMORYLIMIT ??= "614400"

PACKAGECONFIG[monitor] = "\
    -DPLUGIN_MONITOR=ON \
    -DPLUGIN_MONITOR_AUTOSTART=${WPE_MONITOR_AUTOSTART} \
    ,-DPLUGIN_MONITOR=OFF,, \
"

PACKAGECONFIG[monitor_cobalt] = "\
    -DPLUGIN_MONITOR_COBALT=ON \
    -DPLUGIN_MONITOR_COBALT=${WPE_MONITOR_COBALT_MEMORYLIMIT} \
    ,-DPLUGIN_MONITOR_COBALT=OFF,, \
"

PACKAGECONFIG[monitor_opencdmi] = "-DPLUGIN_MONITOR_OPENCDMI=ON,-DPLUGIN_MONITOR_OPENCDMI=OFF,,"

PACKAGECONFIG[monitor_webkit] = "\
    -DPLUGIN_MONITOR_WEBKITBROWSER=ON \
    -DPLUGIN_MONITOR_WEBKITBROWSER_MEMORYLIMIT=${WPE_MONITOR_WEBKITBROWSER_MEMORYLIMIT} \
    ,-DPLUGIN_MONITOR_WEBKITBROWSER=OFF,, \
"

PACKAGECONFIG[monitor_webkit_apps] = "\
    -DPLUGIN_MONITOR_WEBKITBROWSER_APPS=ON \
    -DPLUGIN_MONITOR_WEBKITBROWSER_APPS_MEMORYLIMIT=${WPE_MONITOR_WEBKITBROWSER_APPS_MEMORYLIMIT} \
    ,-DPLUGIN_MONITOR_WEBKITBROWSER_APPS=OFF,, \
"

PACKAGECONFIG[monitor_webkit_resident_app] = "\
    -DPLUGIN_MONITOR_WEBKITBROWSER_RESIDENT_APP=ON \
    -DPLUGIN_MONITOR_WEBKITBROWSER_RESIDENT_APP_MEMORYLIMIT=${WPE_MONITOR_WEBKITBROWSER_RESIDENT_APP_MEMORYLIMIT} \
    ,-DPLUGIN_MONITOR_WEBKITBROWSER_RESIDENT_APP=OFF,, \
"

PACKAGECONFIG[monitor_webkit_ux] = "\
    -DPLUGIN_MONITOR_WEBKITBROWSER_UX=ON \
    -DPLUGIN_MONITOR_WEBKITBROWSER_UX_MEMORYLIMIT=${WPE_MONITOR_WEBKITBROWSER_UX_MEMORYLIMIT} \
    ,-DPLUGIN_MONITOR_WEBKITBROWSER_UX=OFF,, \
"

PACKAGECONFIG[monitor_webkit_youtube] = "\
    -DPLUGIN_MONITOR_WEBKITBROWSER_YOUTUBE=ON \
    -DPLUGIN_MONITOR_WEBKITBROWSER_YOUTUBE_MEMORYLIMIT=${WPE_MONITOR_WEBKITBROWSER_YOUTUBE_MEMORYLIMIT} \
    ,-DPLUGIN_MONITOR_WEBKITBROWSER_YOUTUBE=OFF,, \
"

